#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS, MS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
    timeout-ms = <MS>; \
    require-prior-idle-ms = <150>; \
  };

#define COMBO_TERM_FAST 14
#define COMBO_TERM_NORMAL 20
#define COMBO_TERM_SLOW 30

combos {
  compatible = "zmk,combos";

  COMBO(esc, &kp ESC, 10 11, BASE, COMBO_TERM_NORMAL)

  COMBO(lpar, &kp LPAR, 16 17, BASE, COMBO_TERM_FAST)
  COMBO(rpar, &kp RPAR, 17 18, BASE, COMBO_TERM_FAST)
  COMBO(lbrc, &mkp LBRC, 20 21, BASE, COMBO_TERM_FAST)
  COMBO(rbrc, &mkp RBRC, 21 22, BASE, COMBO_TERM_FAST)

  COMBO(rleftclk, &mkp LCLK, 27 28, BASE, COMBO_TERM_SLOW)
}; 
