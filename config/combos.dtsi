#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS, MS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
    timeout-ms = <MS>; \
    require-prior-idle-ms = <150>; \
  };

#define COMBO_TERM_FAST 14
#define COMBO_TERM_NORMAL 20
#define COMBO_TERM_SLOW 30

combos {
  compatible = "zmk,combos";

  COMBO(leftclick, &mkp LCLK, 21 22, BASE, COMBO_TERM_SLOW)
  COMBO(rightclick, &mkp RCLK, 22 23, BASE, COMBO_TERM_SLOW)
  COMBO(middleclick, &mkp MCLK, 12 22, BASE, COMBO_TERM_SLOW)
}; 
